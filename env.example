# Telegram Bot Configuration
# Get your token from @BotFather on Telegram
TELEGRAM_TOKEN=your_telegram_bot_token_here

# Monitoring Configuration
# How often to check for new listings (in seconds)
CHECK_INTERVAL=300

# Rate Limiting Configuration
# Minimum delay between requests in seconds (be respectful to MercadoLibre servers)
REQUEST_DELAY_MIN=3
# Maximum delay between requests in seconds
REQUEST_DELAY_MAX=8

# Database Configuration
# Database connection string (SQLite by default)
DATABASE_URL=sqlite:///bot.db

# Proxy Configuration
# Enable/disable proxy usage (true/false)
USE_PROXY=true
# Enable/disable fallback to direct connection when proxies are unavailable (true/false)
PROXY_FALLBACK=true
# How often to refresh the proxy list in seconds (5 minutes)
PROXY_UPDATE_INTERVAL=300
# Maximum retry attempts for failed requests
PROXY_MAX_RETRIES=3
# Timeout for proxy requests in seconds
PROXY_TIMEOUT=10

# Security Mode Examples:
# 
# Strict Mode (Maximum anonymity - never exposes your real IP):
# USE_PROXY=true
# PROXY_FALLBACK=false
#
# Flexible Mode (Good balance between anonymity and reliability - default):
# USE_PROXY=true
# PROXY_FALLBACK=true
#
# Direct Mode (No proxy overhead, exposes real IP):
# USE_PROXY=false
# PROXY_FALLBACK=false 